<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/item_margin">

    <ImageView
        android:id="@+id/iv_device_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/description_device_icon"
        android:src="@drawable/ic_tv" />

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/item_margin"
        android:layout_toEndOf="@id/iv_device_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_device_name"
            style="@style/DeviceListItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Device name" />

        <TextView
            android:id="@+id/tv_device_ip"
            style="@style/DeviceListItemIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Device ip" />
    </LinearLayout>


</RelativeLayout>