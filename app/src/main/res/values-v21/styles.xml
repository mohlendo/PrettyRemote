<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DeviceListItemName" parent="@android:style/Widget.Material.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Title</item>
    </style>

    <style name="DeviceListItemIP" parent="@android:style/Widget.Material.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Caption</item>
    </style>

    <style name="NoWifiText" parent="@android:style/Widget.Material.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Subhead</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WifiSettingsButton" parent="android:Widget.Material.Light.Button">
        <item name="android:background">?android:attr/colorPrimary</item>
        <item name="android:textColor">#fff</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>


    <style name="DialogContent" parent="@android:style/Widget.Material.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Subhead</item>

    </style>

    <style name="DeviceListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>

        <item name="android:elevation">4dp</item>
        <item name="android:background">@drawable/device_list_item_ripple</item>
    </style>
</resources>